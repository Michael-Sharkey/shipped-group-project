<div class="container">
  <h1 class="center">Add a New Boat to Your Fleet</h1>
  <%= form_with model: @boat, local: true do |f|  %>
    <% if @boat.errors.any? %>
      <div id="explain_error">
        <h2> Uh oh! <%= pluralize(@boat.errors.count, "error") %> prohibited this boat from being saved: </h2>
        <ul>
          <% @boat.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="form-group">
    <%= f.label "Name:" %>
    <%= f.text_field :name, class: "form-control" %>
    <br>
    <%= f.label "Total Capacity:" %>
    <%= f.text_field :containers, class: "form-control" %>
    <br>
    <%= f.label "Port of Origin:" %>
    <%= f.select :location, ['Boston', 'New York City', 'Philadelphia', 'Houston', 'New Orleans', 'Miami', 'Los Angeles', 'San Francisco', 'Seattle', 'Norfolk', 'Portland' ], class: "form-control"%>
    <br>
    <%= f.label "Upload Photo of Boat:" %>
    <%= f.file_field :avatar, class: "form-control" %>
    <br>
  </div>
  <%= f.submit%>
  <% end %>
  </div>
